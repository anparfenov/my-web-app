{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "useDefineForClassFields": true,
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": ["node"],
        "typeRoots": ["node_modules/@types"],
        "baseUrl": ".",
        "outDir": "./dist/ts-dist",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["server.ts"],
    "exclude": [
        "node_modules"
    ]
}
